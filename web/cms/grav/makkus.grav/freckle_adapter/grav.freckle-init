- include_role:
    name: geerlingguy.nginx
  vars:
    nginx_remove_default_vhost: true
    nginx_vhosts: []
    nginx_user: "{{ freckles_user_vars.freckles_grav_nginx_user | default(omit) }}"
  become: true

- include_role:
    name: geerlingguy.php
  vars:
    php_enable_php_fpm: true
    php_packages_extra:
      - php-zip
    php_webserver_daemon: "nginx"
    php_fpm_pool_user: "{{ freckles_user_vars.freckles_grav_nginx_user | default(omit) }}"
  become: true
