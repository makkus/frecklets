doc:
  help: install traefik reverse proxy
args:
  traefik_template:
    arg_name: config
    extra_arg_names:
      - '-c'
    required: true
    help: path to the traefik config file
    metavar: TEMPLATE_PATH
    is_var: false
tasks:
  - GROUP:
      name: traefik
  - USER:
      name: traefik
      group: traefik
      comment: "traefik service user"
  - CREATE-FOLDER:
      path: /var/log/traefik
      owner: traefik
      group: traefik
  - install-traefik:
      traefik_user: traefik
      traefik_template: "{{ traefik_template }}"
