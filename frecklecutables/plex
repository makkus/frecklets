tasks:
  - GROUP:
      name: plex
      gid: 2000
  - USER:
      name: plexpy
      uid: 3001
      group: plex
  - CREATE-FOLDER:
      path: /var/lib/plexpy
      owner: plexpy
      group: plex
  - install-plex:
      plexupdate_install: yes
      plexupdate_config_location: /etc/plexupdate.conf
      plexupdate_public: no
      plex_uid: 3000
      plex_gid: 3000
      plexpy_user: plexpy
      plexpy_uid: 3001
      plexpy_group: plex
      plexpy_gid: 3001
      plexpy_config_location: /var/lib/plexpy/config.ini
      plexpy_data_location: /var/lib/plexpy/data
